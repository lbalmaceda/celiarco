<h1>Listing products</h1>

<table border="1">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Rnpa</th>
    <th>Barcode</th>
    <th>Gluten free</th>
    <th>Down date</th>
    <th>Cause</th>
    <th>Action</th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= product.rnpa %></td>
    <td><%= product.barcode %></td>
    <td><%= product.gluten_free %></td>
    <td><%= product.down_date %></td>
    <td><%= product.cause %></td>
    <td><%= link_to 'Show', rnpa_product_path(product.rnpa) %></td>
    </tr>
<% end %>
</table>


<%= will_paginate @products %>

